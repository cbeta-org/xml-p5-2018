<app from="#beg0391002" to="#end0391002"><lem wit="#wit1">王</lem><rdg wit="#wit2 #wit4 #wit3" resp="#resp1">主</rdg></app>
<app from="#beg0391a0501" to="#end0391a0501"><lem wit="#wit5 #wit6" resp="#resp3">座<note type="cf1">K13n0496_p1320a10</note></lem><rdg wit="#wit1">坐</rdg></app>
